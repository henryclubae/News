{
  "version": 2,
  "framework": "nextjs",
  "rewrites": [
    {
      "source": "/sw.js",
      "destination": "/_next/static/sw.js"
    },
    {
      "source": "/manifest.json",
      "destination": "/api/manifest"
    }
  ],
  "headers": [
    {
      "source": "/sw.js",
      "headers": [
        {
          "key": "Service-Worker-Allowed",
          "value": "/"
        },
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/_next/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/images/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=86400, s-maxage=31536000"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "NEXT_PUBLIC_APP_NAME": "Sezarr Overseas News",
    "NEXT_PUBLIC_APP_URL": "https://sezarroverseas.com"
  },

  "regions": ["iad1"],
  "github": {
    "autoDeployments": true,
    "autoJobCancelation": true
  }
}